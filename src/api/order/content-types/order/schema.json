{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Orders"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderId": {
      "type": "uid"
    },
    "email": {
      "type": "string"
    },
    "orderItem": {
      "type": "component",
      "repeatable": true,
      "component": "order-item.order-item"
    },
    "totalPrice": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Order Placed",
        "Packaging",
        "Out For Delivery",
        "Delivered"
      ]
    },
    "orderedOn": {
      "type": "datetime"
    }
  }
}
